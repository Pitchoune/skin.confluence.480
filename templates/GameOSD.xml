<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>1000</defaultcontrol>
	<include>dialogeffect</include>
	<coordinates>
		<left>{{ScaleX('470')}}</left>
		<top>{{ScaleY('208')}}</top>
	</coordinates>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(GameVideoFilter) + !Window.IsActive(GameViewMode) + !Window.IsActive(GameControllers)</visible>
			<control type="image">
				<description>background image</description>
				<left>{{ScaleX('0')}}</left>
				<top>{{ScaleY('0')}}</top>
				<width>{{ScaleX('340')}}</width>
				<height>{{ScaleY('344')}}</height>
				<texture border="{{ScaleBorder('20')}}">DialogBack.png</texture>
			</control>
			<control type="image">
				<description>Dialog Header image</description>
				<left>{{ScaleX('40')}}</left>
				<top>{{ScaleY('16')}}</top>
				<width>{{ScaleX('260')}}</width>
				<height>{{ScaleY('40')}}</height>
				<texture>dialogheader.png</texture>
			</control>
			<control type="label">
				<description>header label</description>
				<left>{{ScaleX('40')}}</left>
				<top>{{ScaleY('20')}}</top>
				<width>{{ScaleX('260')}}</width>
				<height>{{ScaleY('30')}}</height>
				<font>font13_title</font>
				<label>$LOCALIZE[35221]</label>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>selected</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="grouplist" id="1000">
				<description>grouplist for buttons</description>
				<left>{{ScaleX('20')}}</left>
				<top>{{ScaleY('70')}}</top>
				<width>{{ScaleX('300')}}</width>
				<height>{{ScaleY('254')}}</height>
				<itemgap>4</itemgap>
				<control type="button" id="1001">
					<description>Resume button</description>
					<width>{{ScaleX('300')}}</width>
					<height>{{ScaleY('38')}}</height>
					<font>fontContextMenu</font>
					<textcolor>grey2</textcolor>
					<focusedcolor>white</focusedcolor>
					<texturefocus border="{{ScaleBorder('5')}}">button-focus.png</texturefocus>
					<label>$LOCALIZE[13404]</label>
					<label2>Select + X</label2>
					<onclick>Play</onclick>
				</control>
				<control type="button" id="1002">
					<description>Reset button</description>
					<width>{{ScaleX('300')}}</width>
					<height>{{ScaleY('38')}}</height>
					<font>fontContextMenu</font>
					<textcolor>grey2</textcolor>
					<focusedcolor>white</focusedcolor>
					<texturefocus border="{{ScaleBorder('5')}}">button-focus.png</texturefocus>
					<label>$LOCALIZE[10035]</label>
					<label2>Select + B</label2>
					<onclick>PlayerControl(Reset)</onclick>
				</control>
				<control type="button" id="1003">
					<description>Stop button</description>
					<width>{{ScaleX('300')}}</width>
					<height>{{ScaleY('38')}}</height>
					<font>fontContextMenu</font>
					<textcolor>grey2</textcolor>
					<focusedcolor>white</focusedcolor>
					<texturefocus border="{{ScaleBorder('5')}}">button-focus.png</texturefocus>
					<label>$LOCALIZE[35222]</label>
					<label2>Select + Start</label2>
					<onclick>Stop</onclick>
				</control>
				<control type="image" id="1004">
					<description>separator image</description>
					<height>{{ScaleY('2')}}</height>
					<texture>separator2.png</texture>
				</control>
				<control type="button" id="1005">
					<description>Video filter button</description>
					<width>{{ScaleX('300')}}</width>
					<height>{{ScaleY('38')}}</height>
					<font>fontContextMenu</font>
					<align>center</align>
					<textcolor>grey2</textcolor>
					<focusedcolor>white</focusedcolor>
					<texturefocus border="{{ScaleBorder('5')}}">button-focus.png</texturefocus>
					<label>$LOCALIZE[230]</label>
					<onclick>ActivateWindow(GameVideoFilter)</onclick>
				</control>
				<control type="button" id="1006">
					<description>View mode button</description>
					<width>{{ScaleX('300')}}</width>
					<height>{{ScaleY('38')}}</height>
					<font>fontContextMenu</font>
					<align>center</align>
					<textcolor>grey2</textcolor>
					<focusedcolor>white</focusedcolor>
					<texturefocus border="{{ScaleBorder('5')}}">button-focus.png</texturefocus>
					<label>$LOCALIZE[629]</label>
					<onclick>ActivateWindow(GameViewMode)</onclick>
				</control>
				<control type="button" id="1007">
					<description>Input settings button</description>
					<width>{{ScaleX('300')}}</width>
					<height>{{ScaleY('38')}}</height>
					<font>fontContextMenu</font>
					<align>center</align>
					<textcolor>grey2</textcolor>
					<focusedcolor>white</focusedcolor>
					<texturefocus border="{{ScaleBorder('5')}}">button-focus.png</texturefocus>
					<label>$LOCALIZE[35223]</label>
					<onclick>ActivateWindow(gamecontrollers)</onclick>
				</control>
			</control>
			<control type="button">
				<description>Close Window button</description>
				<left>{{ScaleX('260')}}</left>
				<top>{{ScaleY('5')}}</top>
				<width>{{ScaleX('64')}}</width>
				<height>{{ScaleY('32')}}</height>
				<label/>
				<font/>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>2</onleft>
				<onright>2</onright>
				<onup>2</onup>
				<ondown>2</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
		</control>
	</controls>
</window>